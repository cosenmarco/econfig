{
  "name": "econfig-server",
  "version": "0.0.1",
  "description": "Econfig server",
  "main": "dist/econfig-server.js",
  "repository": "https://github.com/cosenmarco/econfig",
  "author": "Marco Cosentino",
  "license": "MIT",
  "scripts": {
    "start": "yarn run serve -f ./example/eigenconfig.yaml -l silly -g econfig-combined.log -k debug",
    "clean": "rm -r dist",
    "build": "yarn run build-ts",
    "serve": "node dist/econfig-server.js",
    "watch": "yarn watch-ts",
    "test": "nyc ./node_modules/mocha/bin/mocha",
    "watch-test": "yarn run test -- --watchAll",
    "build-ts": "cp -a package.json src/ && tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "debug": "yarn run build && yarn run watch-debug",
    "serve-debug": "nodemon --inspect dist/index.js",
    "watch-debug": "\"yarn run watch-ts\" \"yarn run serve-debug\""
  },
  "mocha": {
    "diff": true,
    "extension": [
      "ts"
    ],
    "spec": "src/**/*.spec.ts",
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "package": "./package.json",
    "reporter": "spec",
    "slow": 75,
    "timeout": 2000,
    "ui": "bdd"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test"
    }
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/ajv": "^1.0.0",
    "@types/chai": "^4.2.0",
    "@types/express": "^4.17.1",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^5.2.7",
    "@types/moment": "^2.13.0",
    "@types/node": "^13.7.7",
    "@types/object-hash": "^1.3.0",
    "@types/request-promise-native": "^1.0.16",
    "@types/yargs": "^15.0.4",
    "chai": "^4.2.0",
    "husky": "^3.0.5",
    "istanbul": "^0.4.5",
    "json-schema-to-typescript": "^7.1.0",
    "mocha": "^6.2.0",
    "mocha-param": "^2.0.0",
    "nyc": "^14.1.1",
    "source-map-support": "^0.5.13",
    "ts-mockery": "^1.1.0",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "ajv": "^6.10.2",
    "class-validator": "^0.10.0",
    "express": "^4.17.1",
    "inversify": "^5.0.1",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "object-hash": "^1.3.1",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "winston": "^3.2.1",
    "yargs": "^15.3.1"
  }
}
